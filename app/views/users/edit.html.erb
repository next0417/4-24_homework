<main>
  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model: @user do |f| %>
            <div class="formgroup">
              <label>Name</label><br>
              <%= f.text_field :name %>
            </div>
            <div class="formgroup">
              <label for="inputImage">Image</label><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div class="formgroup">
              <label>Introduction</label><br>
              <%= f.text_area :introduction %>
            </div>
            <%= f.submit "Update User", class: 'btn btn-secondary' %>
          <% end %>
      </div>
    </div>
  </div>
</main>

