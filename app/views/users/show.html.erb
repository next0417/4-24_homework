<main>
  <%= render 'users', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opnion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100, 100) %></td>
              <td><%= link_to book_path(book) do %>
                  <%= book.title %>
                  <% end %>
              </td>
              <td><%= book.body %></td>

              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
</main>